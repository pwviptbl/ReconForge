# Configuração padrão do sistema de pentest
# Este arquivo contém as configurações básicas para o funcionamento do sistema
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para 'default.yaml'
# 2. Configure suas chaves API e preferências
# 3. Ajuste os caminhos conforme necessário

# Configurações da API Gemini
api:
  gemini:
    modelo: "gemini-2.5-flash"
    chave_api: "SUA_CHAVE_API_AQUI"  # Obtenha em: https://aistudio.google.com/app/apikey
    timeout: 30
    max_tentativas: 3
    habilitado: true

# Configurações do Nmap
nmap:
  binario: "nmap"
  timeout_padrao: 300  # 5 minutos
  porta_padrao: "1-65535"
  scripts_nse_padrao:
    - "default"
    - "vuln"
    - "discovery"
    - "auth"
    - "safe"
  opcoes_padrao:
    - "-sV"  # Detecção de versão
    - "-sC"  # Scripts padrão
    - "-O"   # Detecção de OS
    - "-A"   # Agressivo

# Configurações do Feroxbuster
feroxbuster:
  binario: "/snap/bin/feroxbuster"
  timeout_padrao: 1800  # 30 minutos
  threads_padrao: 50
  wordlist_padrao: "wordlists/common.txt"
  wordlist_media: "wordlists/medium.txt"
  opcoes_padrao:
    - "--silent"

# Configurações do SQLMap
sqlmap:
  binario: "/snap/bin/sqlmap"
  timeout_padrao: 1800  # 30 minutos
  threads_padrao: 1
  opcoes_padrao:
    - "--batch"

# Configurações de banco de dados
banco_dados:
  tipo: "sqlite"
  arquivo: "dados/pentest.db"
  backup_automatico: true
  maximo_conexoes: 10

# Configurações de logging
logging:
  nivel: "INFO"
  arquivo: "logs/sistema.log"
  max_tamanho_mb: 10
  backup_count: 5
  formato: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  mascarar_dados_sensiveis: true

# Configurações de relatórios
relatorios:
  diretorio: "relatorios"
  formato_padrao: "html"
  incluir_graficos: true
  template: "padrao"

# Configurações de segurança
seguranca:
  validar_entrada: true
  timeout_operacoes: 600  # 10 minutos
  log_comandos: true

# Configurações do OpenVAS/GVM (para módulos futuros)
openvas:
  host: "localhost"
  port: 9390
  username: "admin"
  password: "admin"
  socket: "/run/gvmd/gvmd.sock"

# Configurações de proxy (opcional)
proxy:
  http_proxy: ""
  https_proxy: ""
  no_proxy: "localhost,127.0.0.1"

# Configurações de desenvolvimento
desenvolvimento:
  debug_mode: false
  verbose_mode: false
  save_debug_data: false

# Configurações de notificações (opcional)
notificacoes:
  email: ""
  smtp_server: ""
  smtp_port: 587
  smtp_user: ""
  smtp_password: ""
  smtp_use_tls: true
  webhook_url: ""
  webhook_token: ""
  slack_webhook_url: ""
  discord_webhook_url: ""

# Configurações de cache
cache:
  diretorio: "cache"
  ttl: 3600  # 1 hora
  max_size_mb: 100

# Configurações de backup
backup:
  diretorio: "backups"
  auto_backup: true
  intervalo_horas: 24
  max_backups: 7
